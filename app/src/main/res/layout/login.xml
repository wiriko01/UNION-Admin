<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:paddingLeft= "0dip"
    android:paddingRight = "0dip"
    android:paddingTop = "0dip"
    android:paddingBottom = "0dip"
    tools:context = ".MainActivity">

    <TextView
        android:text = "UNION LOGIN ADMIN"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/welcome"
        android:textSize = "68dip"
        android:textAlignment="center"
        android:layout_marginTop="30dip"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/email"
        android:layout_below = "@+id/welcome"
        android:hint = "Email"
        android:layout_marginTop = "20dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/password"
        android:layout_below = "@+id/email"
        android:hint = "Password"
        android:layout_marginTop = "20dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:layout_below="@+id/password"
        android:layout_marginTop = "40dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:height="70dip"
        android:background="@color/F5497D"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingat"
        android:layout_below="@+id/login"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="0dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cekingat"
        android:text="Ingat saya selama 7 hari"
        android:layout_toRightOf="@+id/ingat"
        android:layout_below="@+id/login"
        android:layout_marginTop = "12dip"
        android:layout_marginLeft="0dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah Password ?"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="@color/F5497D"
        android:layout_below="@+id/ingat"
        android:layout_marginTop = "5dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>