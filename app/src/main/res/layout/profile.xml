<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <ImageButton
                android:id="@+id/ImgBtnhome011"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/abc_vector_test"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heading"
                android:layout_below="@+id/user"
                android:text="PROFILE"
                android:textSize="22dip"
                android:textStyle="bold"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="30dip"
                />

        </TableRow>

    </TableLayout>

    <ImageView
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:src="@mipmap/profil_round"
        android:id="@+id/image"
        android:layout_marginTop="100dip"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_below="@+id/image"
        android:text="Admin"
        android:textSize="20dip"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dip"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/name"
        android:text="Email : Admin01@gmail.com"
        android:textSize="18dip"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="15dip"
        android:layout_marginTop="10dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backup"
        android:layout_below="@+id/email"
        android:text="Backup Email : Admin01B@gmail.com"
        android:textSize="18dip"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="15dip"
        android:layout_marginTop="10dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_below="@+id/backup"
        android:text="Phone : 08xx-xxxx-xxxx"
        android:textSize="18dip"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="15dip"
        android:layout_marginTop="10dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:background="@color/gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:id="@+id/update"
        android:layout_below="@+id/phone"
        android:layout_marginTop = "60dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:padding="15dip"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true"
        android:background="@color/F5497D"/>

</RelativeLayout>